<Window
    x:Class="RESTClient.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RESTClient.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Width="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock Text="Amount" />
            <TextBox x:Name="txtAmount" HorizontalAlignment="Stretch" />
            <TextBlock Margin="0,20,0,0" Text="Period" />
            <TextBox x:Name="txtPeriod" HorizontalAlignment="Stretch" />
            <TextBlock Margin="0,20,0,0" Text="Rate" />
            <TextBox x:Name="txtRate" HorizontalAlignment="Stretch" />
            <Button
                Margin="0,20,0,20"
                Click="Button_Click"
                Content="Calculate EMI" />
            <TextBlock x:Name="lblResult" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
